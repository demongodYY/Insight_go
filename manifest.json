{
  "manifest_version": 3,
  "name": "Insight Go",
  "version": "1.0.1",
  "description": "为 AI 大模型对话生成结构化目录，抓取核心信息，高效转化为博客推文",
  "action": {
    "default_popup": "popup.html",
    "default_title": "Insight Go - AI对话目录"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],

  "host_permissions": [
    "https://chat.deepseek.com/*",
    "https://www.kimi.com/*",
    "https://chat.openai.com/*",
    "https://www.doubao.com/*"
  ],

  "background": { "service_worker": "background.js" },

  "content_scripts": [
    {
      "matches": [
        "https://chat.deepseek.com/*",
        "https://www.kimi.com/*",
        "https://chat.openai.com/*",
        "https://www.doubao.com/*"
      ],
      "js": ["config.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],

  "options_page": "ui/options.html",

  "web_accessible_resources": [
    {
      "resources": ["sidebar.html", "sidebar.js", "sidebar.css"],
      "matches": [
        "https://chat.deepseek.com/*",
        "https://www.kimi.com/*",
        "https://chat.openai.com/*",
        "https://www.doubao.com/*"
      ]
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://xknppgsrflvontwzajhf.supabase.co"
  }
}
